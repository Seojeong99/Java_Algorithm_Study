package algo;

import java.io.IOException;
import java.util.Scanner;

public class Main_1789_수들의합 {
	public static void main(String[] args) throws IOException {
		long n = Long.parseLong(br.readLine());
		
		
		int count=0;
		int num=0;
		while(num<n) {
			count++;
			num=num+count;
		}
		System.out.println();


		
	}
}
