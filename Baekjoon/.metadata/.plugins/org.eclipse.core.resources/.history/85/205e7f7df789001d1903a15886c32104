package algo;

import java.io.IOException;
import java.util.Scanner;

public class Main_1789_수들의합 {
	public static void main(String[] args) throws IOException {
		Scanner sc = new Scanner(System.in);
		long n=sc.nextLong();
		
		int count=0;
		int num=0;
		while(num<=n) {
			count++;
			num=num+count;
		}
		if(num==n) {
			System.out.println(count);
		}
		else {
			
		}
		System.out.println(count);

		
	}
}
